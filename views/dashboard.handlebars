{{#if posts.length}}
<section>
    <h2>Your Posts</h2>
    <ol>
        {{#each posts as |post|}}
        <ul>
            <article class="post">
                <div class="title">
                    <a href="/post/{{id}}">{{title}}</a>
                </div>
                <div class="meta">
                    <h4>Posted By {{user.username}} on {{format_date created_at}}</h4>
                </div>
            </article>
            <a href="/dashboard/edit/{{post.id}}">Edit</a>
        </ul>
        {{/each}}
    </ol>
</section>
{{/if}}
<div>
    <button type="submit"><a href="/dashboard/newpost" class="create-btn">Create New Post</a></button>
</div>